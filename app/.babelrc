{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "targets": {
          "browsers": [
            "> 1%",
            "last 3 versions",
            "ie >= 9",
            "ios >= 8",
            "android >= 4.2"
          ]
        },
        "useBuiltIns": false
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-proposal-class-properties",
    [
      "styled-components",
      {
        "displayName": true
      }
    ],
    [
      "@babel/plugin-proposal-decorators", 
      { 
        "legacy": true 
      }
    ]
  ],
  "ignore": [
    "@espress-org/drive-components",
    "drive-components",
    "@espress-org/drive-components/**",
    "drive-components/**"
  ]
}
